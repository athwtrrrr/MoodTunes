<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/gradient_background">

    <!-- Top Bar with Profile and Notification -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="50dp">

        <!-- Profile Section (Left) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_profile"
                android:contentDescription="User profile"
                android:layout_marginEnd="12dp"
                app:tint="@android:color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome back!"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </LinearLayout>

        <!-- Notification Icon (Right) -->
        <ImageView
            android:id="@+id/ivNotification"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:contentDescription="Notifications"
            android:padding="9dp"
            android:src="@drawable/ic_notification"
            app:tint="@android:color/white" />

    </LinearLayout>

    <!-- New Text View Above Card -->
    <TextView
        android:id="@+id/tvMoodPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Do you want to create a playlist to analyse your mood?\nShare your feeling now!"
        android:textSize="27sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textStyle= "bold"
        android:lineSpacingExtra="4dp"
        android:layout_marginTop="50dp" />

    <!-- Mood Selection Card with Navigation Arrows -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginBottom="24dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Left Arrow -->

        <ImageButton
            android:id="@+id/btnLeftArrow"
            android:layout_width="52dp"
            android:layout_height="58dp"
            android:layout_marginEnd="16dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Previous mood"
            android:src="@drawable/ic_arrow_left" />

        <!-- Mood Card -->

        <!-- Right Arrow -->

        <androidx.cardview.widget.CardView
            android:id="@+id/moodCard"
            android:layout_width="200dp"
            android:layout_height="240dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="255dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Mood Image -->
                <ImageView
                    android:id="@+id/ivMoodImage"
                    android:layout_width="149dp"
                    android:layout_height="153dp"
                    android:layout_marginBottom="16dp"
                    android:scaleType="centerInside" />

                <!-- Mood Name -->
                <TextView
                    android:id="@+id/tvMoodName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Happy"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <ImageButton
            android:id="@+id/btnRightArrow"
            android:layout_width="51dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Next mood"
            android:src="@drawable/ic_arrow_right" />

    </LinearLayout>

    <Button
        android:id="@+id/btnSelectMood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/purple_500"
        android:padding="16dp"
        android:text="SELECT THIS MOOD"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Select Button - Moved up right below the card -->

</LinearLayout>